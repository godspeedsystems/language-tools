{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Godspeed Event Delaration",
  "description": "A recipe for Godspeed events.",
  "type": "object",
  "patternProperties": {
    "(^/)([a-zA-Z0-9:/-]+)(.)(kafka|http)(.)(get|put|post|delete|options){1}": {
      "description": "eventKey",
      "type": "object",
      "examples": [{"summary": "summary summary"}],
      "properties": {
        "description": { "type": "string" },
        "summary": { "type": "string" },
        "fn": { "type": "string" },
        "params": { "$ref": "#/definitions/params" },
        "body": { "$ref": "#/definitions/body" },
        "responses": { "type": "object" },
        "authn": { "type": "boolean" },
        "on_validation_error": {
          "type" : "string",
          "$comment": "This should later only allow valid identifiers denoting a function, currently fn property is also a string",
          "description": "Specifies a function which would be run if a validation error happens for the request"
        }
      }
    }
  },
  "definitions": {
    "examples": {
      "type" : "object",
      "title": "Example",
      "description": "Type a example for better understanding",
      "items": {
        "$ref": "#/definitions/{examplename}"
      }
    },
    "examplename": {
        "type": "string",
        "default" : "hello this is example"
    },
    "params": {
      "type": "array",
      "title": "Params",
      "description": "Define list of params from path, query, cookie or header",
      "items": {
        "$ref": "#/definitions/param"
      },
      "minItems": 1
    },
    "param": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Enter the name",
          "default": "sammpleOne"
        },
        "description": {
          "type": "string",
          "title": "Description",
          "description": "This is the Description of that perticular Param",
          "default": "This is Description of Godspeed Event Params"
        },
        "required": {
          "type": "boolean",
          "title": "Required or Not",
          "description": "if this param is required then set it to true else false",
          "default": false
        },
        "schema": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "default": "string"
            }
          }
          },
        "in": {
          "type": "string",
          "oneOf": [
            {
              "const": "path",
              "title": "Path params",
              "examples": ["`/hello:name` `name` is a path param"]
            },
            {
              "const": "query",
              "title": "Query params",
              "examples": ["`/hello?status=`, `status` is a query param"]
            },
            {
              "const": "header",
              "title": "Header params"
            },
            {
              "const": "cookie",
              "title": "Cookie params"
            }
          ]
        }        
      }
    },
    "body": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "title": "Description",
          "default": "This is the Description of body"
        },
        "required": {
          "type": "boolean",
          "title": "Required or Not",
          "description": "if this param is required then set it to true else false",
          "default": false
        },
        "content": {
          "type": "object",
          "properties": {
            "application/json" : {
              "type": "object" ,
              "properties": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "default": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
    
  }
}
