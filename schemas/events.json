{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Godspeed Event Delaration",
  "description": "A recipe for Godspeed events.",
  "type": "object",
  "patternProperties": {
    "(^/)([a-zA-Z0-9:/-]+)(.)(http)(.)(get|put|post|delete|options){1}$": {
      "description": "eventKey",
      "type": "object",
      "examples": [{ "summary": "summary of the event" }],
      "properties": {
        "description": { "type": "string" },
        "summary": { "type": "string" },
        "fn": { "type": "string" },
        "params": { "$ref": "#/definitions/params" },
        "body": { "type": "object" },
        "responses": { "type": "object" },
        "authn": { "type": "boolean" },
        "on_validation_error": {
          "type" : "string",
          "$comment": "This should later only allow valid identifiers denoting a function, currently fn property is also a string",
          "description": "Specifies a function which would be run if a validation error happens for the request"
        }
      }
    },
    "(^)([_a-zA-Z0-9]+)(.)(kafka)([0-9]*)(.)([_a-zA-Z0-9]+)$": {
      "description": "eventKey",
      "type": "object",
      "examples": [{ "summary": "summary of a kafka event" }],
      "properties": {
        "id" : { "type": "string" },
        "description": { "type": "string" },
        "summary": { "type": "string" },
        "fn": { "type": "string" },
        "body": { "type": "object" },
        "on_validation_error": {
          "type" : "string"
        }
      },
      "additionalProperties": false
    },
    "(^)([_a-zA-Z0-9]+)(.)(salesforce)([0-9]*)(.)([_a-zA-Z0-9]+)$": {
      "description": "eventKey",
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "summary": { "type": "string" },
        "id" : { 
          "description": "This represents the salesforce topic generally",
          "type": "string",
          "pattern": "(^/)([a-zA-Z0-9]+)" 
        },
        "fn": { "type": "string" },
        "body": { "type": "object" },
        "on_validation_error": {
          "type" : "string"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "params": {
      "type": "array",
      "title": "Params",
      "description": "Define list of params from path, query, cookie or header",
      "items": {
        "$ref": "#/definitions/param"
      },
      "minItems": 1
    },
    "param": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "in": {
          "type": "string",
          "oneOf": [
            {
              "const": "path",
              "title": "Path params",
              "examples": ["`/hello:name` `name` is a path param"]
            },
            {
              "const": "query",
              "title": "Query params",
              "examples": ["`/hello?status=`, `status` is a query param"]
            },
            {
              "const": "header",
              "title": "Header params"
            },
            {
              "const": "cookie",
              "title": "Cookie params"
            }
          ]
        },
        "schema": {
          "type": "object"
        }
      }
    }
  }
}
