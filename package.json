{
  "name": "godspeed",
  "displayName": "Godspeed Language Tools",
  "description": "VSCode extension for development assistance with Godspeed micro-service framework.",
  "publisher": "zero8",
  "license": "MIT",
  "version": "1.6.2",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "author": {
    "name": "Ashutosh Tripathi"
  },
  "homepage": "https://github.com/godspeedsystems/language-tools#readme",
  "bugs": {
    "url": "https://github.com/godspeedsystems/language-tools/issues",
    "email": "hello@zero8.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/godspeedsystems/language-tools.git"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Formatters",
    "Extension Packs",
    "Programming Languages"
  ],
  "keywords": [
    "godspeed",
    "microservice",
    "low-code",
    "no-code"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml",
    "Prisma.prisma"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "godspeed.install",
        "title": "Install Godspeed YAML's grammer"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "codeblock.injection",
        "injectTo": [
          "source.yaml"
        ],
        "embeddedLanguages": {
          "source.js": "javascript",
          "godspeed.codeblock": "javascript"
        },
        "tokenTypes": {
          "godspeed.codeblock": "other"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
