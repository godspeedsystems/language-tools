{
  "name": "godspeed",
  "displayName": "Godspeed Extension Pack",
  "description": "VSCode extension for development assistance with Godspeed micro-service framework.",
  "publisher": "zero8",
  "license": "MIT",
  "version": "1.6.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "author": {
    "name": "Ashutosh Tripathi"
  },
  "homepage": "https://github.com/ashu17706/godspeed-vscode-extension-pack/main/README.md",
  "bugs": {
    "url": "https://github.com/ashu17706/godspeed-vscode-extension-pack/issues",
    "email": "hello@zero8.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashu17706/godspeed-vscode-extension-pack.git"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Formatters",
    "Extension Packs",
    "Programming Languages"
  ],
  "keywords": [
    "godspeed",
    "microservice",
    "low-code",
    "no-code"
  ],
  "extensionDependencies": [
    "redhat.vscode-yaml",
    "Prisma.prisma"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "godspeed.install",
        "title": "Install Godspeed YAML's grammer"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "codeblock.injection",
        "injectTo": [
          "source.yaml"
        ],
        "embeddedLanguages": {
          "source.js": "javascript",
          "godspeed.codeblock": "javascript"
        },
        "tokenTypes": {
          "godspeed.codeblock": "other"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/vsce": "^2.16.0",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "husky": "^8.0.0",
    "mocha": "^9.2.1"
  }
}
